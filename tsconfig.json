{
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",                          
    "resolveJsonModule": true,
    "removeComments": false,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,         
  },
  "include": [ "src" ]
}