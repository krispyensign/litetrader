{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/",                          
    "removeComments": false,
    "rootDir": "src/",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,         
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,

    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [ "src/" ]
}